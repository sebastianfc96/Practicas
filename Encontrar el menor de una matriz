// encuentre el menor elemento de la matriz.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 20

using namespace std;

void cargar_matriz(int A[MAX][MAX],int fil,int col);
void mostrar_matriz(int A[MAX][MAX],int fil,int col);
int menor_elemento(int A[MAX][MAX],int fil,int col);

void main()
{
	int A[MAX][MAX], fil, col, men;
	do{
	cout<<"Introducir el numero de filas: ";
	cin>>fil;
	}while(fil<=0||fil>MAX);
	do{
	cout<<"Introducir el numero de columnas: ";
	cin>>col;
	}while(col<=0||col>MAX);
	cargar_matriz(A,fil,col);
	mostrar_matriz(A,fil,col);
	men=menor_elemento(A,fil,col);
	cout<<"El menor elemento de una matriz es: "<<men<<endl;
	getch();
}

void cargar_matriz(int A[MAX][MAX],int fil,int col)
{
	int i=0,j=0;
	for(i=0;i<fil;i++)
		for(j=0;j<col;j++)
		{cout<<"Ingresa la matriz ["<<i<<"]["<<j<<"]: ";
		 cin>>A[i][j];
		}
}
void mostrar_matriz(int A[MAX][MAX],int fil,int col)
{
	int i=0,j=0;
	for(i=0;i<fil;i++)
	{	for(j=0;j<col;j++)
		{
			cout<<A[i][j]<<"\t";
		}
		cout<<endl;
	}
}
int menor_elemento(int A[MAX][MAX],int fil,int col)
{
	int i,j,men;
	men=A[0][0];
	for(i=0;i<fil;i++)
		{for(j=0;j<col;j++)
			{if(A[i][j]<men)
			 men=A[i][j];
			}
		}
	return men;
}
